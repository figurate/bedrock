{
  "variables": {
    "do_api_token": "",
    "do_region": ""
  },
  "builders": [
    {
      "type": "digitalocean",
      "api_token": "{{user `do_api_token`}}",
      "image": "ubuntu-16-04-x64",
      "region": "{{user `do_region`}}",
      "size": "512mb",
      "ssh_username": "root",
      "snapshot_name": "bedrock-puppet-{{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "puppet",
      "destination": "/opt/bedrock"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/debian/puppet-install.sh"
      ]
    }
  ]
}
